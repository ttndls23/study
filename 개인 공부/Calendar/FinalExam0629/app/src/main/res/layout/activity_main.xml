<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"

    tools:context=".MainActivity">


    <TableLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff00"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <TextView
                android:id="@+id/my_number"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="학번" />

            <EditText
                android:id="@+id/input_number"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/my_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="이름" />

            <EditText
                android:id="@+id/input_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>


        </TableRow>


    </TableLayout>




<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#20aaff"
android:orientation="horizontal">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RadioButton
            android:id="@+id/radioMorning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="아침" />

        <RadioButton
            android:id="@+id/radioBranch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="점심" />

        <RadioButton
            android:id="@+id/radioNight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="저녁" />
    </RadioGroup>
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="200dp"

    android:layout_weight="1"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/checkBoxRice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="밥" />

    <CheckBox
        android:id="@+id/checkBoxRnr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="국" />

    <CheckBox
        android:id="@+id/checkBoxQkscks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="반찬1" />

    <CheckBox
        android:id="@+id/checkBoxQkscks2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="반찬2" />
</LinearLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#ff00ff"
        android:orientation="vertical">

        <Button
            android:id="@+id/BtnSum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="계산" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffff00"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="결과 : " />

        <TextView
            android:id="@+id/TextViewResult"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:maxLines="2" />
    </LinearLayout>

</LinearLayout>